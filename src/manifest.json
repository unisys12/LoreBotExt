{
  "name": "LoreBot Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Display Grimoire in the browser while playing Destiny the Game",
  "icons": {
    "16": "images/favicon-16.png",
    "128": "images/favicon-128.png"
  },
  "default_locale": "en",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com; object-src 'self'",
  "background": {
    "scripts": [

    ]
  },
  "permissions": [
    "*://*.bungie.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/favicon-16.png",
      "38": "images/favicon-32.png"
    },
    "default_title": "LoreBot ChromeExt"
  },
  "options_page": "index.html"
}
