{
  "name": "LoreBot Extension",
  "version": "0.1.6",
  "manifest_version": 2,
  "description": "Display Grimoire in the browser while playing Destiny the Game",
  "icons": {
    "16": "assets/images/favicon-16.png",
    "128": "assets/images/favicon-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'self'",
  "background": {
    "scripts": [
        "background.js"
    ]
  },
  "permissions": [
    "*://*.bungie.net/*",
    "*://*.ishtar-collective.net/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "assets/images/favicon-16.png",
      "38": "assets/images/favicon-32.png"
    },
    "default_title": "LoreBot ChromeExt"
  },
  "options_page": "index.html"
}
