{
  "name": "lorebotext",
  "version": "0.1.2",
  "description": "Deliver in-game lore to players of Destiny through a chrome extension",
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha test --recursive",
    "dev": "webpack --config webpack.config.js --watch",
    "style": "sass --watch src/styles/style.sass:assets/style.css",
    "dev-build": "browserify src/core.js -t babelify --outfile src/index.js"
  },
  "repository": "https://github.com/unisys12/LoreBotExt.git",
  "author": "Phillip Jackson <unisys12@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.22.0",
    "babel-preset-env": "^1.1.8",
    "babel-watch": "^2.0.5",
    "babelify": "^7.3.0",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "dotenv": "^4.0.0",
    "eslint": "^3.13.1",
    "extract-text-webpack-plugin": "^2.0.0",
    "mocha": "^3.2.0",
    "sinon": "^1.17.7",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "co": "^4.6.0",
    "mongoose": "^4.7.7",
    "vue": "^2.1.10"
  },
  "browser": {
    "vue": "./node_modules/vue/dist/vue.common"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "globals": {
      "chrome": true
    },
    "rules": {
      "eol-last": 0,
      "quotes": [
        2,
        "single"
      ]
    }
  }
}
